@model PracticeAppMvc.Net.Models.Category

@{
    ViewData["Title"] = "Xoá chuyên mục";
}

<h1>@ViewData["Title"]</h1>

<h3>Có chắc chắn xoá?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Title)
        </dd>        
    </dl>
    
    <form asp-action="Delete">
